<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_profile"
    android:orientation="vertical"
    tools:context=".ui.profile.ProfileFragment">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="3"
    android:orientation="vertical"
    >
        <ImageView
            android:id="@+id/imageAdd"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_face" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asel Kuchkacheva"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developer"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+996707018902"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_number_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="мобильный"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ул. Кривоносова, 103"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Бишкек"
            android:textSize="18sp" />
</LinearLayout>
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_weight="2">
    <TextView
        android:id="@+id/tv_works"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Works"
        android:textSize="34sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_image1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tv_for_image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Работа 1"
        android:textSize="22sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_for_image1_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Про работу 1"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/iv_image2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher_round" />
    <TextView
        android:id="@+id/tv_for_image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Работа 2"
        android:textSize="22sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_for_image2_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Про работу 2"
        android:textSize="20sp" />
   </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:layout_weight="50"
        android:text="Hire me"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="30sp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:background="@drawable/ic_message_button"
        />
</LinearLayout>
</LinearLayout>